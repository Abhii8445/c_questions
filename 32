#include <stdio.h>
#define max_size 100
int main(){
    int arr[max_size];
    int n,i,j;
    printf("enter the length of array ");
    scanf("%d",&n);
    for (i = 0; i < n; i++)
    {
        printf("enter the the %d element : ",i+1);
        scanf("%d",&arr[i]);
    }
    printf("Here,these are entered negetive number-\n");
    for (i = 0; i < n; i++)
    {
        if (arr[i]<0)
        {
        printf("The %d element is %d\n",i+1,arr[i]);
        }
    }
    return 0;
}
