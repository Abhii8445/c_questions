#include <stdio.h>
int main(){
    int i,n,p;
    printf("Enter a positive integer: ");
    scanf("%d",&n);
    i = 0;
    while (n>0)
    {
        p = n%10;
        i = i*10+p;
        n = n/10;
    }
    printf("%d",i);
    return 0;
}

#include <stdio.h>
int main(){
    int n,i,p;
    printf("Enter a positive integer: ");
    scanf("%d",&n);
    for (i = 0; n>0 ;i = i*10+p)
    {
        p = n%10;
        n = n/10;
    }
    printf("%d",i);
    return 0;
}

#include <stdio.h>
int main(){
    int n,i,p;
    printf("Enter a positive integer: ");
    scanf("%d",&n);
    i = 0;
    do{
      p = n%10;
      i = i*10+p;
      n = n/10;
    } while (n>0);
    printf("%d",i);  
  return 0;
}
